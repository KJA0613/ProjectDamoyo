<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitschool.basic.ReplyMapper">

	<update id="updateReplyCount" parameterType="Integer">
		update post set replyCounts = replyCounts + 1 where postNo = #{postNo}
	</update>
	
	<insert id="insertReply" parameterType="BReplyDTO">
		insert into reply(replyNo,replyContents,postNo,replyUserId) values(#{replyNo},#{replyContents},#{postNo},#{replyUserId})
	</insert>
	
	<select id="selectReply" resultType="BReplyDTO" parameterType="BPostNoInfoDTO">
		select * from reply where postNo = #{postNo} and boardName = #{boardName} order by replyNo
	</select>
	
</mapper>
